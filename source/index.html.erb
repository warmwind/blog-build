---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <div class='rows clearfix blog-item'>
    <div class='span5'>
      <h3><%= link_to article.title, article %> </h3>
      <span><%= article.date.strftime('%b %e, %Y') %></span>
    </div>
    <div class='span5 offset1'>
      <!-- use article.summary(250) if you have Nokogiri available to show just
           the first 250 characters -->
      <%= article.summary(250) %>
    </div>
  </div>

<% end %>

<div class='rows paginate'>
  <% if paginate %>
    <% if prev_page %>
    <div class="span2 pull-left"><%= link_to 'Previous page', prev_page %></div>
    <% end %>
  <% end %>


  <% if paginate %>
    <% if next_page %>
      <div class="span2 pull-right"><%= link_to 'Next page', next_page %></div>
    <% end %>
  <% end %>
</div>
