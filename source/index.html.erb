---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <% column_pos = i.even? ? 'left' : 'right' %>
  <% arrow_pos = i.even? ? 'right' : 'left' %>
  <% if i.even? %>
    <div class='rows clearfix blog-line'>
  <% end %>
    <div class="span5 blog-item pull-<%= column_pos %> <%= column_pos %>-column">
      <div class="arrow-<%= arrow_pos %>"></div>
      <h3><%= link_to article.title, article %> </h3>
      <ul>
        <% article.tags.each do |tag| %>
          <li><%= tag %></li>
        <% end %>
      </ul>
      <%= article.summary(500) %>
      <div class="timeline-point <%= column_pos %>">
        <div class='publish-date'>
          <%= article.date.strftime('%e') %><br /><%= article.date.strftime('%b') %>
        </div>
      </div>
    </div>
  <% unless i.even? %>
    </div>
  <%end%>

<% end %>

<div class='rows paginate'>
  <% if paginate %>
    <% if prev_page %>
    <div class="span2 pull-left"><%= link_to 'Previous page', prev_page %></div>
    <% end %>
  <% end %>


  <% if paginate %>
    <% if next_page %>
      <div class="span2 pull-right"><%= link_to 'Next page', next_page %></div>
    <% end %>
  <% end %>
</div>
