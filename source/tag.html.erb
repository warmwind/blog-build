<% content_for :title, tagname %>
<% content_for :navs do %>
  <li><a href="/index.html">所有文章</a></li>
  <li><a href="/apps.html">小程序们</a></li>
  <li><a href="/about.html">关于我</a></li>
  <li class='rss'><a href="/feed.xml"><img src="/images/rss.png" alt=""></a></li>
<% end %>
<div class='tags-result-container'>
  <div class="rows"><span class="tag tag-title"><%= tagname %></span></div>
  <% articles.each do |article| %>
    <div class="rows clearfix">
      <div class="span3"></div>
      <div class="span8 category">
        <ol>
          <li class='article clearfix'>
            <span class='date'><%= article.date.strftime('%Y %b %d') %></span>
            <span class='title'><%= link_to article.title, article %></span>
          </li>
        </ol>
      </div>
      <div class="span1"></div>
    </div>
  <% end %>
</div>